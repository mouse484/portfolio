{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base", ":timezone(Asia/Tokyo)", "group:fortawesome"],
  "prHourlyLimit": 0,
  "automerge": true,
  "major": {
    "automerge": false
  },
  "packageRules": [
    {
      "groupName": "linters/formater",
      "extends": ["packages:linters"],
      "matchPackagePatterns": ["prettier"],
      "matchPackagePrefixes": ["@typescript-eslint/"],
      "automerge": true,
    },
    {
      "groupName": "svelte",
      "matchPackageNames": ["svelte"],
      "matchPackagePrefixes": ["@sveltejs/"]
    },
    {
      "groupName": "windicss",
      "matchPackageNames": ["windicss"]
    },
    {
      "groupName": "simple-icons",
      "matchPackageNames": "simple-icons"
    }
  ]
}
