{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base", ":timezone(Asia/Tokyo)", "group:fortawesome"],
  "prHourlyLimit": 0,
  "automerge": true,
  "major": {
    "automerge": false
  },
  "packageRules": [
    {
      "groupName": "linters/formater",
      "extends": ["packages:linters"],
      "matchPackagePatterns": ["prettier"],
      "matchPackagePrefixes": ["@typescript-eslint/"],
      "automerge": true
    },
    {
      "groupName": "svelte",
      "matchPackagePatterns": ["^svelte"],
      "matchPackagePrefixes": ["@sveltejs/"]
    },
    {
      "groupName": "TypeScript",
      "matchPackageNames": ["typescript", "tslib"]
    },
    {
      "groupName": "css",
      "matchPackageNames": ["tailwindcss", "animated-tailwindcss"],
      "matchPackagePatterns": ["^postscss"]
    },
    {
      "groupName": "simple-icons",
      "matchPackageNames": ["simple-icons"]
    },
    {
      "groupName": "test",
      "matchPackageNames": ["vitest", "happy-dom"]
    }
  ]
}
