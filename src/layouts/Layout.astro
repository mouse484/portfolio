---
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Astro description"
    />
    <meta
      name="viewport"
      content="width=device-width"
    />
    <link
      rel="icon"
      type="image/svg+xml"
      href="/icon.svg"
    />
    <meta
      name="generator"
      content={Astro.generator}
    />
    <title>Yuto Nagata's Portfolio</title>
  </head>
  <body>
    <Header />
    <main class="grid place-items-center">
      <slot class="max-w-lg" />
    </main>
  </body>
  <Footer />
</html>
