---
import { getCollection } from 'astro:content';
import WorksCard from '../WorksCard.astro';
const entries = await getCollection('works');
---

<div
  class="mt-8 flex flex-col gap-4"
  md="flex-row flex-wrap justify-center"
>
  {
    entries.map((item) => (
      <div class="flex-1">
        <WorksCard work={item.data} />
      </div>
    ))
  }
</div>
