---
export interface Props {
  href: string;
  content: string;
  target?: 'blank';
  contentClass?: string;
}
const { href, content, target = '_blank', contentClass = '' } = Astro.props;
---

{/* eslint-disable-next-line astro/jsx-a11y/control-has-associated-label */}
<a
  {href}
  {target}
  class="w-full flex gap-4 min-w-0"
>
  <slot />
  <p
    class=""
    class:list={contentClass}
  >
    {content}
  </p>
</a>
