---
export interface Props {
  href: string
  content: string
  target?: 'blank'
  contentClass?: string
}
const { href, content, target = '_blank', contentClass = '' } = Astro.props;
---

<a
  {href}
  {target}
  class="flex gap-4"
>
  <slot />
  <p
    class=""
    class:list={contentClass}
  >
    {content}
  </p>
</a>
