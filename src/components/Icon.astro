---
import { Icon as AstroIcon } from 'astro-icon';

export interface Props {
  pack?: string;
  name: string;
  size: keyof typeof sizes;
}

const sizes = {
  sm: 1,
  md: 1.5,
} as const;

const { pack, name, size } = Astro.props;
---

<AstroIcon
  {pack}
  {name}
  style={`--size: ${sizes[size]}rem;`}
/>

{/* eslint-disable astro/no-unused-css-selector */}
<style>
  [astro-icon] {
    height: var(--size);
    width: var(--size);
  }
</style>
{/* eslint-enable astro/no-unused-css-selector */}
